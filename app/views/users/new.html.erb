
<% if @user.errors.any? %>
<% @user.errors.full_messages do |mess|%>
<h4 class="flash"><%= mess %></h4>
<% end %>
<% end %>

    <center id="c">
    <h1 class="mb-10">Create Your Account</h1>
    <div class="form-holder">
<%= form_for @user do |f| %>
    <div class="form-group">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name , class: "form-control", id: "name"%>
    </div>
    <br>
    <div class="form-group">
    <%= f.label :email %>
    <br>
    <%= f.text_field :email , class: "form-control", id: "email"%>
    </div>
    <br>
    <div class="form-group">
    <%= f.label :password %>
    <br>
    <%= f.password_field :password, class: "form-control", id:"password"%>
    </div>
    <br>
    <div class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <br>
    <%= f.password_field :password_confirmation , class: "form-control", id:"password"%>
    </div>
    <br>

    <%= f.submit class:"btn btn-primary", id: "sub-btn" %>

<% end %>
</div>
</center>

<script>

$(document).ready(function(){
 $('#sub-btn').click(function(e){

     if($('#name').val() == "" || $('#email').val() == "" || $('#password').val() == ""){
         e.preventDefault();

        $('#c').effect("shake", "fast");

     }

 });

});



</script>
