<script>

function initMap(){

    var options = {
        zoom:12,
        center: {lat:40.7128, lng: -74.0060}
    };


    var map = new google.maps.Map(document.getElementById('map'), options);

    var marker = new google.maps.Marker({
        position: {lat:40.7128, lng:-74.0060},
        map: map
    });

    var markers = [];

    for(var i = 0; i < markers.length; i++ ){
