    <h2><%= @place.name %></h2>



      <div class="card" style="width:500px">
      <img src=<%= url_for(@place.img_url) %> class="image-responsive">
      <div class="card-img-overlay">
        <h4 class="card-title"> <%= @place.name %></h4>
        <p class="card-text">Ranking <%= @place.average_ranking %></p>
        <a href="#" class="btn btn-primary">See Deatils</a>
        <input type="hidden" class="lat-div" value="<%= @place.lat %>" >
        <input type="hidden" class="lng-div" value="<%= @place.lng %>" >
        <input type="hidden" class="title" value="<%= @place.name %>" >



      </div>
    </div>






<script>
var markers = [];
var map;

function initMap(){

    var options = {
        zoom:10,
        center: {lat:40.7012, lng:-73.9875},
        mapTypeId: 'hybrid'
    };


     map = new google.maps.Map(document.getElementById('user-map'), options);

    var bmarker = new google.maps.Marker({
        draggable: true,
        animation: google.maps.Animation.DROP,
        position: {lat:40.7010, lng:-73.9875},
        title: 'Your Location!',
        icon: {
        url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png"},

        map: map

    });

    addToArray();

   }








   for(var i = 0; i < markers.length; i++ ){
   addMarker(markers[i]);
   }

       function addMarker(coords){
           var arr = [];


       var marker = new google.maps.Marker({
                   position: coords,
                   map: map,
                   draggable: true,
                   animation: google.maps.Animation.DROP
               });


           }









   function toggleBounce() {
        if (bmarker.getAnimation() !== null) {
          bmarker.setAnimation(null);
        } else {
          bmarker.setAnimation(google.maps.Animation.BOUNCE);
        }
      }




        function drop() {



        for (var i = 0; i < markers.length; i++) {
          addMarkerWithTimeout(markers[i], i * 200);
        }
      }

      function addMarkerWithTimeout(position, timeout) {
        window.setTimeout(function() {
          markers.push(new google.maps.Marker({
            position: position,
            map: map,
            animation: google.maps.Animation.DROP
          }));
        }, timeout);
      }


      function addToArray(){
        var lats = document.getElementsByClassName('lat-div');
        var lngs = document.getElementsByClassName('lng-div');

        for(var i = 0; i < lats.length;i++){
            markers.push({lat: parseFloat(lats[i].value), lng: parseFloat(lngs[i].value)})
            }
        }



        function clearMarkers() {
            for (var i = 0; i < markers.length; i++) {
              markers[i].setMap(null);
            }
            markers = [];
          }


</script>



<script async defer
